<UserControl x:Class="DesktopContactsApp.Control.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopContactsApp.Control"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="200">
    <Grid Background="#AAEEE5E5">
        <StackPanel>
            <TextBlock x:Name="NameText"
                       FontSize="20"
                       FontWeight="Bold"/>
            <TextBlock x:Name="Email"
                       FontSize="12"
                       Foreground="DodgerBlue"/>
            <TextBlock x:Name="PhoneNumber"
                       FontSize="12"
                       FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
